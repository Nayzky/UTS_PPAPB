<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OrderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; Back"
        android:background="@android:color/transparent"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />



    <ImageView
        android:id="@+id/ticketImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/a"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/filmTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nightlone"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/bioskopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bioskop Jogja"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tanggalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal: 14 oktober 2023"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/orderNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Order Number: #123456"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/seatInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat: Regular"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/paymentMethodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran: BCA"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga: Rp 50.000"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/actualPayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar: Rp 50.000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>
