<!-- activity_home.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_innaiya_azkiya_h"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/film1Layout1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="156dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/a" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Film 1"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film1RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.4"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/film1Layout2"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/b"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sadernei"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film2RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/film1Layout3"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/c"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleepysan"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film3RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="3.8"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/film1Layout4"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/d"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wonder egg"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film4RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="3.98"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/film1Layout5"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/e"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Futurenew"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film5RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.3"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/film1Layout6"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/f"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closer"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film6RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.5"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/film1Layout7"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/g"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boku no hero"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film7RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.7"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/film1Layout8"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/h"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Totoroo"
                        android:textSize="20dp"
                        android:layout_gravity="center_horizontal" />

                    <RatingBar
                        android:id="@+id/film8RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4.8"
                        android:layout_gravity="center_horizontal"
                        android:progressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
